pid /run/xray-reverse-proxy/nginx.pid;
error_log /var/log/xray-reverse-proxy/error.log;

events {
    worker_connections 768;
}

http {
    server {
        listen 443 http2 ssl;
        listen [::]:443 http2 ssl;

        server_name {{ inventory_hostname }};

        ssl_certificate /var/xray-reverse-proxy/certs/fullchain.pem;
        ssl_certificate_key /var/xray-reverse-proxy/certs/key.pem;
        ssl_protocols TLSv1.2 TLSv1.3;
        ssl_ciphers ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384;

        location /{{ xray_server.path }} {
            proxy_pass http://127.0.0.1:1337;
            proxy_http_version 1.1;
            proxy_redirect off;
        }

        location / {
            root /usr/local/share/xray-reverse-proxy/static;
            index index.html;
        }

        access_log /var/log/xray-reverse-proxy/access.log;
    }

    server {
        listen 80;

        location / {
            root /usr/local/share/xray-reverse-proxy/static;
            index index.html;
        }

        location ^~ /.well-known/acme-challenge/ {
            default_type "text/plain";
            root /var/xray-reverse-proxy/challenge;
        }

        location = /.well-known/acme-challenge/ {
            return 404;
        }

        access_log /var/log/xray-reverse-proxy/access.log;
    }
}
